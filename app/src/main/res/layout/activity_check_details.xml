<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:background="@color/round"
    android:layout_height="match_parent"
    tools:context=".activities.CheckDetails">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView2"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold|normal"
            android:layout_gravity="center_horizontal"
            android:text="Farmer Basic Data "
            android:textColor="#000" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="3dp"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/full_name"
                        android:textColor="#000" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="  Jack"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/phone_number"
                        android:textColor="#000" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" 070000222 "
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/street_address"
                        android:textColor="#000" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/streetTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="  Westlands"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold|normal"
            android:textSize="18sp"
            android:text="Funding Request" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ETproduct"
                android:layout_width="200dp"
                android:inputType="text"
                android:maxLines="1"
                android:text=""
                android:layout_height="wrap_content"
                android:hint="Product Name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etBudget"
                android:layout_width="200dp"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:text=""
                android:layout_height="wrap_content"
                android:hint="Budget  " />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etProposal"
                android:layout_width="200dp"
                android:text=""
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:hint="Proposal  " />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/productImage"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/ic_account"
            android:layout_width="250dp"
            android:layout_height="200dp"
            tools:ignore="VectorDrawableCompat" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnUpdate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="137dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/round_button"
            android:text="Update Details " />

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>